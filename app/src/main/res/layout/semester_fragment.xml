<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.search.SemesterFragment">

    <TextView
        android:id="@+id/title"
        style="@style/headerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingHorizontal="16dp"
        android:text="@string/semester_fragment_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsvRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/applyButton">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:theme="@style/customRadioButtonStyle">

            <TextView
                style="@style/headerText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Year 1" />

            <RadioButton
                android:id="@+id/y1s1"
                style="@style/customRadioButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year 1 Semester 1" />

            <RadioButton
                android:id="@+id/y1s2"
                style="@style/customRadioButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year 1 Semester 2" />

            <TextView
                style="@style/headerText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Year 2" />

            <RadioButton
                android:id="@+id/y2s1"
                style="@style/customRadioButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year 2 Semester 1" />

            <RadioButton
                android:id="@+id/y2s2"
                style="@style/customRadioButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year 2 Semester 2" />

            <TextView
                style="@style/headerText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Year 3" />

            <RadioButton
                android:id="@+id/y3s1"
                style="@style/customRadioButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year 3 Semester 1" />

            <RadioButton
                android:id="@+id/y3s2"
                style="@style/customRadioButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year 3 Semester 2" />

            <TextView
                style="@style/headerText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Year 4" />

            <RadioButton
                android:id="@+id/y4s1"
                style="@style/customRadioButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year 4 Semester 1" />

            <RadioButton
                android:id="@+id/y4s2"
                style="@style/customRadioButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year 4 Semester 2" />

        </RadioGroup>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/applyButton"
        style="@style/primaryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:text="Apply"
        app:layout_constraintTop_toBottomOf="@id/nsvRadioGroup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>