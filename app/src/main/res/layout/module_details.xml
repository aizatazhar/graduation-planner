<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="8dp"
    android:orientation="vertical">

        <TextView
            android:id="@+id/moduleCode"
            style="@style/headerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text=""
            android:textColor="@color/red.400" />

        <TextView
            android:id="@+id/moduleTitle"
            style="@style/headerText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/departmentFacultyCredits"
            style="@style/headerText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/grey.200" />

        <TextView
            android:id="@+id/semesters"
            style="@style/headerText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/grey.200" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey.200"
            android:layout_marginVertical="8dp"/>

        <TextView
            android:id="@+id/descriptionHeader"
            style="@style/headerText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"/>

        <TextView
            android:id="@+id/description"
            style="@style/bodyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/prerequisiteHeader"
            android:paddingTop="8dp"
            style="@style/headerText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Prerequisites"/>

        <TextView
            android:id="@+id/prerequisite"
            style="@style/bodyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="" />

        <TextView
            android:id="@+id/corequisiteHeader"
            android:paddingTop="8dp"
            style="@style/headerText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Corequisites"/>

        <TextView
            android:id="@+id/corequisite"
            style="@style/bodyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="" />

        <TextView
            android:id="@+id/preclusionHeader"
            android:paddingTop="8dp"
            style="@style/headerText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Preclusions"/>

        <TextView
            android:id="@+id/preclusion"
            style="@style/bodyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="" />

</LinearLayout>