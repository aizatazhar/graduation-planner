<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="headerText">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="headerText2">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="headerText3">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="headerText4">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="bodyText">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/grey.300</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="baseButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="primaryButton" parent="baseButton">
        <item name="backgroundTint">@color/red.600</item>
    </style>

    <style name="secondaryButton" parent="baseButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="customRadioButtonStyle" parent="Theme.Graduation_Planner">
        <item name="android:textColor">@color/grey.200</item>
        <item name="colorAccent">@color/red.600</item>
    </style>

    <style name="searchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:iconTint">@color/red.400</item>
        <item name="android:textColor">@color/grey.800</item>
        <item name="android:editTextColor">@color/grey.800</item>
        <item name="android:textColorHint">@color/grey.500</item>
    </style>
</resources>